<?xml version="1.0"?>
<config>
    <sections>
        <trs_automated_reports translate="label">
            <label>Automated Reports</label>
            <tab>trs</tab>
            <frontend_type>text</frontend_type>
            <sort_order>700</sort_order>
            <show_in_default>1</show_in_default>
            <show_in_website>1</show_in_website>
            <show_in_store>1</show_in_store>
            <groups>
                <sales_tax_report translate="label">
                    <label>Sales Tax Report</label>
                    <frontend_type>text</frontend_type>
                    <sort_order>100</sort_order>
                    <show_in_default>1</show_in_default>
                    <show_in_website>1</show_in_website>
                    <show_in_store>1</show_in_store>
                    <fields>
                        <recipients translate="label">
                            <label>TRS Sales Tax Report Recipients</label>
                            <comment>Separate recipients with a comma</comment>
                            <frontend_type>text</frontend_type>
                            <sort_order>100</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>0</show_in_website>
                            <show_in_store>0</show_in_store>
                        </recipients>
                    </fields>
                </sales_tax_report>
                <international_sales_reports translate="label">
                    <label>International Sales Report</label>
                    <frontend_type>text</frontend_type>
                    <sort_order>100</sort_order>
                    <show_in_default>1</show_in_default>
                    <show_in_website>1</show_in_website>
                    <show_in_store>1</show_in_store>
                    <fields>
                        <recipients translate="label">
                            <label>TRS International Sales Report Recipients</label>
                            <comment>Separate recipients with a comma</comment>
                            <frontend_type>text</frontend_type>
                            <sort_order>100</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>0</show_in_website>
                            <show_in_store>0</show_in_store>
                        </recipients>
                    </fields>
                </international_sales_reports>
            </groups>
        </trs_automated_reports>
        <trs_logging>
            <groups>
                <logs>
                    <fields>
                        <trs_reports_log translate="label">
                            <label>TRS Reports Module Logging</label>
                            <frontend_type>select</frontend_type>
                            <source_model>adminhtml/system_config_source_yesno</source_model>
                            <sort_order>90</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>0</show_in_website>
                            <show_in_store>0</show_in_store>
                        </trs_reports_log>
                    </fields>
                </logs>
            </groups>
        </trs_logging>
    </sections>
</config>